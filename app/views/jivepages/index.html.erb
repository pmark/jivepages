<% content_for(:header) do %>
  <h2>All Pages</h2>
<% end %>

<table>
<% for jivepage in @jivepages %>
  <tr>
    <td><%=h jivepage.title %></td>
    <td><%= link_to 'View', jivepage %></td>
    <td>| <%= link_to 'Edit', edit_jivepage_path(jivepage) %></td>
    <td><%= link_to image_tag(plugin_image_path("trashcanicon.gif")), jivepage, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for(:footer) do %>
  <blockquote>
    <% form_for :jivepage do %>
      <%= submit_tag "Make your own page right now" %>
    <% end %>
  </blockquote>
<% end %>



