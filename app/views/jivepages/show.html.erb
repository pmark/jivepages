<% content_for(:header) do %>
  <%= rows_for(:header, @jivepage) %>
<% end %>

<%= rows_for(:body, @jivepage) %>

<% content_for(:footer) do %>
  <blockquote>
  <% if @jivepage.editable_by?(page_user) %>
  <%= link_to('Edit this page', edit_jivepage_path(@jivepage)) %>
  <br/>
  <%= link_to('Delete this page', jivepage_path(@jivepage), :method => :delete,
      :confirm => 'Are you sure?') %>
  <br/>
  <% end %>
  <%= link_to 'New page', new_jivepage_path %>
  <br/>
  <%= link_to 'All pages', jivepages_path %>
  </blockquote>
<% end %>

